<!-- Test stochastic simulation specification -->

<beast version='2.0' namespace='master.beast:beast.core.parameter'>
  <run spec='Trajectory'
       simulationTime='20'
       verbosity="0">
      
      <!-- Can use the deterministic integrator to observe the difference
      between the rate equation solution and typical stochastic trajectories. -->
      <stepper spec='RateEquationStepper' stepSize="0.01" iterations="3"/>
      
    <model spec='Model' id='model'>
      <population spec='Population' id='X' populationName='X'/>
      <population spec='Population' id='Y' populationName='Y'/>
      
      <reaction spec='Reaction' reactionName="PreyBirth" rate="10">
	X -> 2X
      </reaction>
      <reaction spec='Reaction' reactionName="Predation" rate="1">
	X + Y -> 2Y
      </reaction>
      <reaction spec='Reaction' reactionName="PreditorDeath" rate="1">
          Y -> 0
      </reaction>
    </model>
    
    <initialState spec='InitState'>
      <populationSize spec='PopulationSize' population='@X' size='10'/>
      <populationSize spec='PopulationSize' population='@Y' size='1'/>
    </initialState>
    
    <output spec='JsonOutput' fileName='LotkaVolterra_output.json'/>
  </run>
</beast>
