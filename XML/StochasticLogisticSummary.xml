<!-- Test stochastic simulation specification -->

<beast version='2.0' namespace='master.beast:beast.core.parameter'>
    <run spec='EnsembleSummary'
         simulationTime='10'
         nSamples='101'
         nTraj='1000'
         seed='53'
         verbosity='0'>
        
        <stepper spec='SALStepper' stepSize="0.5" />
        <!--<stepper spec='TauLeapingStepper' stepSize="0.5" />-->
        <!--<stepper spec='GillespieStepper' />-->

        <model spec='Model' id='model'>
            <population spec='Population' populationName="X" id='X'/>
            <reaction spec='Reaction' reactionName="Birth" rate="2.0">
                X -> 2X
            </reaction>
            <reaction spec='Reaction' reactionName="Death" rate="0.001">
                2X -> X
            </reaction>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' population='@X' size='1'/>
        </initialState>

        <moment spec='Moment' momentName='X'>
            <factor idref='X'/>
        </moment>
        
        <output spec='JsonOutput' fileName='StochasticLogisticSummary.json'/>
    </run>
</beast>
