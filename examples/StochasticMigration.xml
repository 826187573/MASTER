<!-- Test simulation of model with structured populations -->

<beast version='2.0' namespace='hamlet.beast:beast.core.parameter'>
    
    <populationType spec='PopulationType' id='X' typeName='X' dim="2" />
        
    <run spec='HamletSimulation'
         simulationTime='20'
         nSamples='1001'
         nTraj='100'
         seed='42'
         outFileName='out.json'>
        
        <integrator spec='TauLeapingIntegrator' stepSize="0.01"/>
        <!--<integrator spec='GillespieIntegrator' />-->

        <model spec='Model' id='model'>
            <populationType idref='X'/>
            <reactionGroup spec='ReactionGroup' reactionGroupName="Migration">
                <reaction spec='Reaction' rate="0.1">
                    <reactant spec='Population' type="@X" location="0"/>
                    <product spec='Population' type="@X" location="1"/>
                </reaction>
                <reaction spec='Reaction' rate="0.2">
                    <reactant spec='Population' type="@X" location="1"/>
                    <product spec='Population' type="@X" location="0"/>
                </reaction>
            </reactionGroup>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' size='100'>
                <population spec='Population' type='@X' location="0"/>
            </populationSize>
        </initialState>

        <momentGroup spec='MomentGroup' momentGroupName='X'>
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="0"/>
            </moment>
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="1"/>
            </moment>
        </momentGroup>
        
        <momentGroup spec='MomentGroup' momentGroupName='N' sum="true">
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="0"/>
            </moment>
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="1"/>
            </moment>
        </momentGroup>
        
    </run>
</beast>
