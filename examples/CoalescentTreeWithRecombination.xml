<!-- Generate tree using a coalescent model with branching events. -->

<beast version='2.0' namespace='hamlet.beast:beast.core.parameter'>
    <run spec='InheritanceTrajectory'
         verbosity='1'>
        
        <model spec='InheritanceModel'>
            <population spec='Population' populationName='X' id='X'/>
            <reaction spec='InheritanceReaction' reactionName='Coalescence' rate="1.0">
                <reactant spec='Individual' population='@X'>
                    <child spec='Individual' population='@X' id='child'/>
                </reactant>
                <reactant spec='Individual' population='@X'>
                    <child idref='child'/>
                </reactant>
                <product idref='child'/>
            </reaction>
            <reaction spec='InheritanceReaction' reactionName='Recombination' rate="0.5">
                <reactant spec='Individual' population='@X'>
                    <child spec='Individual' population='@X' id='child1'/>
                    <child spec='Individual' population='@X' id='child2'/>
                </reactant>
                <product idref='child1'/>
                <product idref='child2'/>
            </reaction>
        </model>                

        <initialState spec='InitState'>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
            <lineageSeed spec='Individual' population='@X'/>
        </initialState>
        
        <lineageEndCondition spec='LineageEndCondition' nLineages="1"/>
                
        <output spec='NexusOutput' fileName='out.tree' reverseTime="true"/>
    </run>
</beast>
