<!-- Test stochastic simulation specification -->

<beast version='2.0' namespace='hamlet.beast:beast.core.parameter'>
    <run spec='HamletSimulation'
         simulationTime='20'
         nSamples='1001'
         nTraj='1000'
         seed='53'
         verbosity='1'
         outFileName='out.json'>
        
        <integrator spec='TauLeapingIntegrator' stepSize="0.01" />
        <!-- <integrator spec='GillespieIntegrator' /> -->

        <model spec='Model' id='model'>
            <population spec='Population' populationName="X" id='X'/>
            <reaction spec='Reaction' reactionName="Birth" rate="1.0">
                <reactant idref='X'/>
                <product idref='X'/>
                <product idref='X'/>
            </reaction>
            <reaction spec='Reaction' reactionName="Death" rate="0.01">
                <reactant idref='X'/>
                <reactant idref='X'/>
                <product idref='X'/>
            </reaction>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' size='1'>
                <population idref='X'/>
            </populationSize>
        </initialState>

        <moment spec='Moment' momentName='X'>
            <factor idref='X'/>
        </moment>
    </run>
</beast>
