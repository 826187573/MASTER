<!-- Test stochastic simulation specification -->

<beast version='2.0' namespace='hamlet.beast:beast.core.parameter'>
    <run spec='HamletSimulation'
         simulationTime='5'
         nSamples='1001'
         nTraj='1000'
         seed='53'
         outFileName='out.json'>

        <integrator spec='TauLeapingIntegrator' stepSize="0.01"/>
        <!-- <integrator spec='GillespieIntegrator' /> -->
        
        <model spec='Model' id='model'>
            <population spec='Population' id='S' popName='S'/>
            <population spec='Population' id='I' popName='I'/>
            <reaction spec='Reaction' reactionName="Infection">
                <rate spec='RealParameter'>0.005</rate>
                <reactantSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='S'/>
                        <population idref='I'/>
                    </popSchema>
                </reactantSchema>
                <productSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='I'/>
                        <population idref='I'/>
                    </popSchema>
                </productSchema>
            </reaction>
            <reaction spec='Reaction' reactionName="Recovery">
                <rate spec='RealParameter'>0.5</rate>
                <reactantSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='I'/>
                    </popSchema>
                </reactantSchema>
                <productSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='S'/>
                    </popSchema>
                </productSchema>
            </reaction>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' size='999'>
                <population idref='S'/>
            </populationSize>
            <populationSize spec='PopulationSize' size='1'>
                <population idref='I'/>
            </populationSize>
            <model idref='model'/>
        </initialState>

        <moment spec='Moment' momentName='S'>
            <momentSchema spec='Schema'>
                <popSchema spec='PopSchema'>
                    <population idref='S'/>
                </popSchema>
            </momentSchema>
        </moment>
        
        <moment spec='Moment' momentName='I'>
            <momentSchema spec='Schema'>
                <popSchema spec='PopSchema'>
                    <population idref='I'/>
                </popSchema>
            </momentSchema>
        </moment>
    </run>
</beast>
