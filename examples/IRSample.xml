<!-- implements a constant-rate birth-death-sample process -->

<beast version='2.0' namespace='hamlet.beast:beast.core.parameter'>
    <run spec='HamletSimulation'
         simulationTime='100'
         nSamples='1001'
         nTraj='1000'
         seed='53'
         outFileName='out.json'>
        
        <integrator spec='TauLeapingIntegrator' stepSize="0.01"/>
        <!-- <integrator spec='GillespieIntegrator' /> -->

        <model spec='Model' id='model'>
            <population spec='Population' id='I' popName='I'/>
            <population spec='Population' id='R' popName='R'/>
            <population spec='Population' id='I_sample' popName='I_sample'/>

            <!-- birth reaction -->
            <reaction spec='Reaction' reactionName="Birth">
                <rate spec='RealParameter'>1</rate>
                <reactantSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='I'/>
                    </popSchema>
                </reactantSchema>
                <productSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='I'/>
                        <population idref='I'/>
                    </popSchema>
                </productSchema>
            </reaction>
            
            <!-- recovery reaction -->
            <reaction spec='Reaction' reactionName="Recovery">
                <rate spec='RealParameter'>0.25</rate>
                <reactantSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='I'/>
                    </popSchema>
                </reactantSchema>
                <productSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='R'/>
                    </popSchema>
                </productSchema>
            </reaction>
            
            <!-- sampling reaction -->
            <reaction spec='Reaction' reactionName="Sampling">
                <rate spec='RealParameter'>0.25</rate>
                <reactantSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='I'/>
                    </popSchema>
                </reactantSchema>
                <productSchema spec='Schema'>
                    <popSchema spec='PopSchema'>
                        <population idref='I_sample'/>
                    </popSchema>
                </productSchema>
            </reaction>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' size='1'>
                <population idref='I'/>
            </populationSize>
            <populationSize spec='PopulationSize' size='0'>
                <population idref='I_sample'/>
            </populationSize>
            <populationSize spec='PopulationSize' size='0'>
                <population idref='R'/>
            </populationSize>
            <model idref='model'/>
        </initialState>

        <moment spec='Moment' momentName='I'>
            <momentSchema spec='Schema'>
                <popSchema spec='PopSchema'>
                    <population idref='I'/>
                </popSchema>
            </momentSchema>
        </moment>
        
        <moment spec='Moment' momentName='R'>
            <momentSchema spec='Schema'>
                <popSchema spec='PopSchema'>
                    <population idref='R'/>
                </popSchema>
            </momentSchema>
        </moment>
        
        <moment spec='Moment' momentName='Isamp'>
            <momentSchema spec='Schema'>
                <popSchema spec='PopSchema'>
                    <population idref='I_sample'/>
                </popSchema>
            </momentSchema>
        </moment>
    </run>
</beast>
