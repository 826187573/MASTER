<!-- Estimates population size moments under a two-deme structured
     stochastic logistic growth model. -->

<beast version='2.0' namespace='master.beast:beast.core.parameter'>
    
    <run spec='EnsembleSummary'
         simulationTime='20'
         nSamples='1001'
         nTraj='100'>
        
        <stepper spec='TauLeapingStepper' stepSize="0.01"/>
        <!--<stepper spec='GillespieStepper' />-->

        <model spec='Model' id='model'>
            <populationType spec='PopulationType' typeName='X' dim='2 2' id='X'/>
            <reactionGroup spec='ReactionGroup' reactionGroupName="Migration">
                <reaction spec='Reaction' rate="0.1">
                    X[0,0] -> X[1,0]
                </reaction>
                <reaction spec='Reaction' rate="0.2">
                    X[1,0] -> X[0,0]
                </reaction>
            </reactionGroup>
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' size='100'>
                <population spec='Population' type='@X' location="0 0"/>
            </populationSize>
        </initialState>

        <momentGroup spec='MomentGroup' momentGroupName='X'>
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="0 0"/>
            </moment>
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="1 0"/>
            </moment>
        </momentGroup>
        
        <momentGroup spec='MomentGroup' momentGroupName='N' sum="true">
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="0 0"/>
            </moment>
            <moment spec='Moment'>
                <factor spec='Population' type="@X" location="1 0"/>
            </moment>
        </momentGroup>
        
        <output spec='JsonOutput' fileName='StructuredStochasticLogistic_out.json'/>
    </run>
</beast>
